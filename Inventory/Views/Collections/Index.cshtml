@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Inventory</h1>
  <form action ="/collections" method="post">
    <label>Name</label>
    <input id="name" type="text" name="name">
    <label>Quantity</label>
    <input id="quantity" type="number" name="quantity">
    <label>Age</label>
    <input id="age" type="date" name="age">
    <label>Cost</label>
    <input id="cost" type="number" name="cost">
    <button type='submit' class="btn btn-warning">Add collection</button>
  </form>
  <div class="collections">
    <hr>
    <h2>List of all your collections</h2>

    <table class="table table-hover">
      <thead>
        <tr>
          <th class='col-md-2' scope="col">Name</th>
          <th class='col-md-2' scope="col">Qty</th>
          <th class='col-md-2' scope="col">Age</th>
          <th class='col-md-2' scope="col">Cost</th>
          <th class='col-md-2' scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>

        @foreach(var collection in Model)
        {
          <tr>
            <td class='col-md-2'>@collection.Name</td>
            <td class='col-md-2'>@collection.Quantity</td>
            <td class='col-md-2'>@collection.Age</td>
            <td class='col-md-2'>@collection.Cost</td>
            <td class='col-md-2'>
              <form class="" action="/collections/delete/@collection.Id" method="post">
                <button class='btn btn-danger'>Delete</button>
              </form>
          </tr>

        }
      </tbody>
    </table>
  </div>
</div>
